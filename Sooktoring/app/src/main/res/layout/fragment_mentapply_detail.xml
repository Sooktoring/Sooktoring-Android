<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="326dp"
        android:layout_height="166dp"
        android:layout_margin="6dp"
        android:background="@drawable/background_round"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/iv_user_profile"
            android:layout_marginTop="16dp"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/image_profile_default" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendard_semibold"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#121212"
            android:lineSpacingExtra="10sp"
            android:gravity="center_horizontal"
            tools:text="mentee name (실명)"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="20dp"
            android:src="@drawable/sticker_major_mentee"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#121212"
            android:lineSpacingExtra="8sp"
            tools:text="멘토링 카테고리"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/button_resumecategory_select"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pretendard_semibold"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#121212"
            android:lineSpacingExtra="8sp"
            tools:text="멘토링 신청 이유"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/pretendard"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#121212"
            android:lineSpacingExtra="8sp"
            tools:text="일이삼사오육칠팔구십일이삼사오육칠팔구십일이삼"/>
        <View
            android:layout_width="328dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="#aaaaaa">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/pretendard_semibold"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#121212"
            android:lineSpacingExtra="8sp"
            tools:text="멘토링 신청 이유"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/pretendard"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#121212"
            android:lineSpacingExtra="8sp"
            tools:text="일이삼사오육칠팔구십일이삼사오육칠팔구십일이삼"/>
        <View
            android:layout_width="328dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="#aaaaaa">
        </View>
    </LinearLayout>
    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:src="@drawable/button_mentoring_no"/>
        <ImageView
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:src="@drawable/button_mentoring_yes"/>

    </LinearLayout>

</LinearLayout>