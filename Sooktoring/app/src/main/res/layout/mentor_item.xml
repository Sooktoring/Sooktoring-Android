<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="256dp"
    android:layout_marginHorizontal="8dp"
    android:orientation="vertical"
    android:background="@drawable/background_mentor_item"
    android:elevation="4dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_mentor_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/background_temp_profile"/>

    <TextView
        android:id="@+id/tv_mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mentor_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mentor_job"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_mentor_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="(3년)"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_mentor_univ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공과대학 / 소프트웨어학부"
        android:textSize="12sp"
        android:textColor="#aaaaaa"
        android:textAlignment="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/brn_mentor_apply"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:background="@drawable/button_mento_apply"
        android:layout_marginTop="6dp" />

</LinearLayout>