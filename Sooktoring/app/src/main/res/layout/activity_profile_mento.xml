<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".initProfile.FragmentInitProfileSetting"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/profile_input"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:text="프로필 입력"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/profile_black"
        tools:ignore="MissingConstraints">

    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_input"
        tools:ignore="Suspicious0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="14dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="6dp"
                android:padding="6dp"
                android:background="@drawable/background_round" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textStyle="normal"
                        android:textSize="20sp"
                        android:textColor="#4f5ee8"
                        android:lineSpacingExtra="10sp"
                        tools:text="학적정보"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textColor="#aaaaaa"
                        android:lineSpacingExtra="6sp"
                        tools:text="나의 멘토만 볼 수 있어요."/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:orientation="horizontal">

                    <ImageView
                    android:id="@+id/iv_user_profile"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/image_profile_default" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            >
                            <TextView
                                android:layout_width="78dp"
                                android:layout_height="24dp"

                                android:fontFamily="@font/pretendard_semibold"
                                android:textStyle="normal"
                                android:textSize="16sp"
                                android:textColor="#121212"
                                android:lineSpacingExtra="8sp"
                                tools:text="user name"/>

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="24dp"
                                android:layout_marginLeft="4dp"
                                android:fontFamily="@font/pretendard_semibold"
                                android:textStyle="normal"
                                android:textSize="16sp"
                                android:textColor="#121212"
                                android:lineSpacingExtra="8sp"
                                tools:text="멘토"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:layout_marginTop="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_semibold"
                                android:textStyle="normal"
                                android:textSize="14sp"
                                android:textColor="#121212"
                                android:lineSpacingExtra="7sp"
                                tools:text="졸업 (or 수료, 유예)"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="21dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard"
                                android:textStyle="normal"
                                android:textSize="14sp"
                                android:textColor="#aaaaaa"
                                android:lineSpacingExtra="7sp"
                                tools:text="yyyy/mm/dd ~yyyy/mm/dd"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#121212"
                        android:lineSpacingExtra="7sp"
                        tools:text="제 1전공"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="41dp"
                        android:fontFamily="@font/pretendard"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#121212"
                        android:lineSpacingExtra="7sp"
                        tools:text="전공명"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="138dp"
                        android:fontFamily="@font/pretendard"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#aaaaaa"
                        android:lineSpacingExtra="7sp"
                        android:gravity="end"
                        tools:text="단과대"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="27dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#121212"
                        android:lineSpacingExtra="7sp"
                        tools:text="제 2전공"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="39dp"
                        android:fontFamily="@font/pretendard"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#121212"
                        android:lineSpacingExtra="7sp"
                        tools:text="전공명"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="138dp"
                        android:fontFamily="@font/pretendard"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#aaaaaa"
                        android:lineSpacingExtra="7sp"
                        android:gravity="end"
                        tools:text="단과대"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="296dp"
                android:layout_height="40dp"
                android:src="@drawable/button_univeinfo_modify"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="28dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:textColor="#4f5ee8"
                    android:lineSpacingExtra="10sp"
                    tools:text="기본사항"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pretendard_light"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#aaaaaa"
                    android:lineSpacingExtra="6sp"
                    tools:text="모든 유저가 볼 수 있어요."/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/user_profile_modify"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/image_profile_default" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="37dp"
                    android:src="@drawable/icon_plusimg" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#121212"
                    android:lineSpacingExtra="8sp"
                    tools:text="직무"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/pretendard_light"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#c4c4c4"
                    android:lineSpacingExtra="6sp"
                    tools:text="(필수)"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#c4c4c4"
                android:lineSpacingExtra="7sp"
                tools:text="현재 직무 또는 희망 직무를 적어주세요"/>
            <View
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#c4c4c4">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_light"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#fe0000"
                    android:lineSpacingExtra="6sp"
                    tools:text="직무를 적어주세요"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="211dp"
                    android:fontFamily="@font/pretendard_light"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#c4c4c4"
                    android:lineSpacingExtra="6sp"
                    android:gravity="end"
                    tools:text="0/15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#121212"
                    android:lineSpacingExtra="8sp"
                    tools:text="닉네임"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/pretendard_light"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#c4c4c4"
                    android:lineSpacingExtra="6sp"
                    tools:text="(필수)"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#c4c4c4"
                android:lineSpacingExtra="7sp"
                tools:text="닉네임을 적어주세요"/>
            <View
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#c4c4c4">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_light"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#fe0000"
                    android:lineSpacingExtra="6sp"
                    tools:text="닉네임을 적어주세요"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="200dp"

                    android:fontFamily="@font/pretendard_light"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#c4c4c4"
                    android:lineSpacingExtra="6sp"
                    android:gravity="end"
                    tools:text="0/15"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="23dp"
                android:gravity="center"
                android:fontFamily="@font/pretendard_semibold"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#4f5ee8"
                android:lineSpacingExtra="10sp"
                tools:text="직무 경력"/>

            <TextView
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pretendard_semibold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#121212"
                android:lineSpacingExtra="8sp"
                tools:text="직무"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#c4c4c4"
                android:lineSpacingExtra="7sp"
                tools:text="경험 직무를 적어주세요"/>
            <View
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#c4c4c4">
            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="297dp"
                android:fontFamily="@font/pretendard_light"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#c4c4c4"
                android:lineSpacingExtra="6sp"
                android:gravity="end"
                tools:text="0/15"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#121212"
                    android:lineSpacingExtra="8sp"
                    tools:text="근무 기간"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:fontFamily="@font/pretendard"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#c4c4c4"
                    android:lineSpacingExtra="7sp"
                    tools:text="입사일"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:fontFamily="@font/pretendard_light"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#c4c4c4"
                    android:lineSpacingExtra="6sp"
                    tools:text="(yyyy/mm/dd)"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="9dp"
                    android:fontFamily="@font/pretendard"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#c4c4c4"
                    android:lineSpacingExtra="7sp"
                    tools:text="퇴사일"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:fontFamily="@font/pretendard_light"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#c4c4c4"
                    android:lineSpacingExtra="6sp"
                    tools:text="(yyyy/mm/dd)"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:background="#c4c4c4">
                </View>
                <View
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:background="#c4c4c4">
                </View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="79dp"
                android:layout_height="21dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="250dp">

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="재직중" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#121212"
                android:lineSpacingExtra="8sp"
                tools:text="직급"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#c4c4c4"
                android:lineSpacingExtra="7sp"
                tools:text="해당 경력에서의 직급을 적어주세요"/>
            <View
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#c4c4c4">
            </View>

            <ImageView
                android:layout_width="119dp"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/button_plusmajor"/>

            <ImageView
                android:layout_width="296dp"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/button_profile_univinfo_unactive"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>