<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".initProfile.UnivInfoActivity"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="학적 정보 입력"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/profile_black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="31dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/image_profile_default" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/icon_plusimg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/profile_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="(필수)"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingVertical="8dp"
            android:background="@color/transparent"
            android:hint="실명을 적어주세요"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <TextView
            android:id="@+id/tv_error_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="이름을 적어주세요"
            android:textColor="@color/profile_red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학적상태"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/profile_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="(필수)"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingVertical="8dp"
            android:background="@color/transparent"
            android:hint="ex) 재학, 휴학, 졸업, 수료, 졸업 유예"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <TextView
            android:id="@+id/tv_error_univ_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="학적 상태를 적어주세요"
            android:textColor="@color/profile_red"/>

    </LinearLayout>

</LinearLayout>